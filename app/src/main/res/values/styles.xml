<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.Toolbar.Day" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/beau_blue</item>
    </style>

    <style name="AppTheme.Toolbar.Night" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/gray_100</item>
    </style>

    <style name="helpQuestion" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">24dp</item>
    </style>

    <style name="helpAnswer" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="date" parent="TextAppearance.AppCompat">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="title" parent="TextAppearance.AppCompat">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#141414</item>
    </style>

    <style name="author" parent="TextAppearance.AppCompat">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#141414</item>
    </style>

</resources>