<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/download"
        android:background="?android:attr/selectableItemBackground"
        android:padding="8dp">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/darkmode_switch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dark mode toggle" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/shareLinearLayout"
        android:background="?android:attr/selectableItemBackground"
        android:padding="8dp">

        <TextView
            android:id="@+id/smallA"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:text="@string/A"
            android:textAlignment="center" />

        <com.google.android.material.slider.Slider
            android:id="@+id/discreteSlider"
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/smallA"
            android:layout_toStartOf="@id/bigA"
            android:stepSize="20"
            android:value="20.0"
            android:valueFrom="0.0"
            android:valueTo="100.0" />

        <TextView
            android:id="@+id/bigA"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:text="@string/A"
            android:textSize="32sp"
            android:textAlignment="center"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

</LinearLayout>